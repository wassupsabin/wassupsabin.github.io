---
import Layout from '../layouts/Layout.astro';

const contactMethods = [
  {
    title: 'Email',
    value: 'pdmkhrl@gmail.com',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
    </svg>`
  },
  {
    title: 'Location',
    value: 'Calton Heritage and Learning Centre, 423 London Rd, Glasgow G40 1AG',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
    </svg>`
  },
  {
    title: 'Facebook',
    value: 'Follow/Add us on Facebook',
    link: 'https://www.facebook.com/profile.php?id=100092667380174',
    icon: `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
      <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/>
    </svg>`
  }
];
---

<Layout
  title="Contact Us"
  description="Get in touch with Nepalese Southside Community Glasgow">

  <!-- Hero Section -->
  <section class="bg-primary-blue text-white py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl font-bold mb-6">Contact Us</h1>
        <p class="text-xl">
          Have questions? Here's how you can reach us.
        </p>
      </div>
    </div>
  </section>

  <div class="container mx-auto px-4 py-16">
    <div class="max-w-6xl mx-auto">
      <!-- Contact Information -->
      <div class="max-w-2xl mx-auto">
        <div class="bg-white rounded-lg shadow-sm p-8">
          <h2 class="text-2xl font-bold mb-8 text-center">Get in Touch</h2>
          
          <div class="space-y-8">
            {contactMethods.map(method => (
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0 text-primary-blue" set:html={method.icon} />
                <div>
                  <h3 class="font-bold text-lg mb-1">{method.title}</h3>
                  {method.link ? (
                    <a
                      href={method.link}
                      class="text-primary-blue hover:text-primary-blue/80"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      {method.value}
                    </a>
                  ) : (
                    <p class="text-gray-600">{method.value}</p>
                  )}
                </div>
              </div>
            ))}
          </div>

          <div class="mt-10 pt-8 border-t border-gray-200">
            <h3 class="font-bold text-lg mb-4">Office Hours</h3>
            <div class="space-y-2 text-gray-600">
              <p>Monday - Friday: 9:00 AM - 5:00 PM</p>
              <p>Saturday: 10:00 AM - 2:00 PM</p>
              <p>Sunday: Closed</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Map Section -->
  <section class="bg-mountain-gray/5 py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-2xl font-bold mb-8">Our Location</h2>
        <div class="aspect-w-16 aspect-h-9 rounded-lg overflow-hidden shadow-lg">
          <!-- Replace with actual Google Maps embed code -->
          <div class="bg-mountain-gray/20 w-full h-full flex items-center justify-center">
            <p class="text-gray-600">Map placeholder - Add Google Maps embed code here</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>