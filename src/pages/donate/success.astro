---
import Layout from '../../layouts/Layout.astro';

// Get payment intent details from URL if needed
const searchParams = Astro.url.searchParams;
const paymentIntentId = searchParams.get('payment_intent');
---

<Layout
  title="Donation Successful"
  description="Thank you for your donation to Nepalese Southside Community Glasgow"
>
  <div class="min-h-[60vh] flex items-center justify-center">
    <div class="max-w-2xl mx-auto px-4 py-16 text-center">
      <div class="mb-8">
        <svg
          class="w-16 h-16 text-green-500 mx-auto"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
          />
        </svg>
      </div>

      <h1 class="text-4xl font-bold mb-4">Thank You for Your Donation!</h1>
      <p class="text-xl text-gray-700 dark:text-gray-300 mb-8">
        Your generous contribution helps us continue our work in supporting the Nepalese community in Glasgow's Southside.
      </p>

      <div class="space-y-4">
        <p class="text-gray-600 dark:text-gray-400">
          A receipt has been sent to your email address.
        </p>
        <p class="text-gray-600 dark:text-gray-400">
          Payment Reference: {paymentIntentId}
        </p>
      </div>

      <div class="mt-12 space-x-4">
        <a
          href="/"
          class="inline-block bg-primary-blue text-white px-8 py-3 rounded-md font-medium hover:bg-primary-blue/90 transition-colors"
        >
          Return to Homepage
        </a>
        <a
          href="/activities"
          class="inline-block bg-white text-primary-blue dark:bg-dark dark:text-white border-2 border-primary-blue dark:border-white px-8 py-3 rounded-md font-medium hover:bg-primary-blue hover:text-white dark:hover:bg-white dark:hover:text-dark transition-colors"
        >
          Explore Our Activities
        </a>
      </div>
    </div>
  </div>
</Layout>