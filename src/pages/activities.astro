---
import Layout from '../layouts/Layout.astro';

// Future Events (upcoming events)
const futureEvents = [
  {
    title: 'Nepali Pathshala',
    description: 'Weekly classes for children and adults',
    date: 'Every Saturday, 09:00 AM - 11:00 AM',
    location: 'Calton Heritage and Learning Centre, 423 London Rd, Glasgow G40 1AG',
    image: '/images/events/school.jpg',
    alt: 'Students learning Nepali language'
  }
];

// Past Events (completed events)
const pastEvents = [
  {
    title: 'Sajja Chaulagain Performance',
    description: 'We invited Sajja Chaulagain for a special performance from Nepal. She is a well-known singer and performer in Nepal.',
    date: 'February 12, 2025',
    location: 'Southside Community Hall',
    image: '/images/events/sajja.jpeg',
    alt: 'sajja chaulagain performance'
  },
  {
    title: 'Blood Donation Program',
    description: 'Our annual blood donation in collaboration with the Scottish Blood Transfusion Service.',
    date: 'January 6, 2025',
    location: '8 Nelson Mandela Place',
    image: '/images/events/blood.jpeg',
    alt: 'Blood Donation Program'
  },
  {
    title: 'New Year Celebration',
    description: 'Nepali New Year celebration with community performances',
    date: 'April 14, 2025',
    location: 'Southside Park',
    image: '/images/events/class_2.jpeg',
    alt: 'New Year celebration'
  }
];
---

<Layout 
  title="Activities & Events" 
  description="Join our community activities and events at Nepalese Southside Community Glasgow"
>
  <!-- Hero Section -->
  <section class="bg-primary-blue text-white py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl font-bold mb-6">Activities & Events</h1>
        <p class="text-xl">
          Join our vibrant community events and activities. From language classes to cultural celebrations, there's something for everyone.
        </p>
      </div>
    </div>
  </section>

  <!-- Future Events Section -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-8 text-center">Upcoming Events</h2>
      
      {futureEvents.length === 0 ? (
        <div class="text-center py-12 bg-mountain-gray/5 rounded-lg">
          <p class="text-xl text-gray-600">No upcoming events at this time. Check back soon!</p>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {futureEvents.map(event => (
            <div class="bg-white rounded-lg shadow-sm overflow-hidden">
              <img 
                src={event.image} 
                alt={event.alt}
                class="w-full h-48 object-cover"
                loading="lazy"
              />
              <div class="p-6">
                <h3 class="text-xl font-bold mb-2">{event.title}</h3>
                <p class="text-gray-600 mb-4">{event.description}</p>
                <div class="space-y-2 mb-4">
                  <p class="flex items-center text-sm">
                    <svg class="w-5 h-5 mr-2 text-primary-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <span>{event.date}</span>
                  </p>
                  <p class="flex items-center text-sm">
                    <svg class="w-5 h-5 mr-2 text-primary-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <span>{event.location}</span>
                  </p>
                </div>
                <a
                  href="/contact"
                  class="inline-flex items-center text-primary-blue hover:underline"
                >
                  <span>Contact us for more information</span>
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          ))}
        </div>
      )}
    </div>
  </section>

  <!-- Past Events Section -->
  <section class="py-16 bg-mountain-gray/5">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-8 text-center">Past Events</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {pastEvents.map(event => (
          <div class="bg-white rounded-lg shadow-sm overflow-hidden">
            <img 
              src={event.image} 
              alt={event.alt}
              class="w-full h-48 object-cover"
              loading="lazy"
            />
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2">{event.title}</h3>
              <p class="text-gray-600 mb-4">{event.description}</p>
              <div class="space-y-2">
                <p class="flex items-center text-sm">
                  <svg class="w-5 h-5 mr-2 text-primary-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span>{event.date}</span>
                </p>
                <p class="flex items-center text-sm">
                  <svg class="w-5 h-5 mr-2 text-primary-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <span>{event.location}</span>
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-2xl font-bold mb-4">Interested in attending our events?</h2>
        <p class="text-lg mb-8">
          If you have questions about any of our activities or would like more information, please get in touch with us.
        </p>
        <a
          href="/contact"
          class="inline-block bg-primary-blue text-white px-8 py-3 rounded-md font-medium hover:bg-primary-blue/90 transition-colors"
        >
          Contact Us
        </a>
      </div>
    </div>
  </section>
</Layout>