---
import SyllabusLayout from '../../layouts/SyllabusLayout.astro';

const resources = {
  workbooks: [
    {
      title: 'Nepali Workbook',
      description: 'Essential Nepali script and vocabulary exercises',
      fileSize: '3.5 MB',
      format: 'PDF'
    }
  ],
  audioMaterials: [
    {
      title: 'Basic Pronunciations',
      description: 'Learn correct pronunciation of Nepali alphabet and common words',
      duration: '45 minutes',
      format: 'MP3'
    },
    {
      title: 'Conversation Practice',
      description: 'Common phrases and dialogues for daily situations',
      duration: '60 minutes',
      format: 'MP3'
    }
  ],
  onlineResources: [
    {
      title: 'Nepali Dictionary',
      description: 'Online Nepali-English dictionary with pronunciation guides',
      url: 'https://example.com/dictionary'
    },
    {
      title: 'Grammar Reference',
      description: 'Comprehensive guide to Nepali grammar rules',
      url: 'https://example.com/grammar'
    }
  ]
};
---

<SyllabusLayout title="Learning Resources" description="Download study materials and access online resources for learning Nepali">
  <div class="prose prose-lg max-w-none">
    <h1 class="text-4xl font-bold mb-8">Learning Resources</h1>

    <!-- Workbooks Section -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Workbooks</h2>
      <div class="grid grid-cols-1 gap-6">
        {resources.workbooks.map(book => (
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-xl font-bold mb-2">{book.title}</h3>
            <p class="text-gray-700 mb-4">{book.description}</p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600">
                {book.fileSize} • {book.format}
              </span>
              <button
                class="bg-primary-blue text-white px-4 py-1 rounded-md font-medium hover:bg-primary-blue/90 transition-colors text-sm"
              >
                Download
              </button>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Audio Materials -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Audio Materials</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {resources.audioMaterials.map(audio => (
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-xl font-bold mb-2">{audio.title}</h3>
            <p class="text-gray-700 mb-4">{audio.description}</p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600">
                {audio.duration} • {audio.format}
              </span>
              <button
                class="bg-primary-blue text-white px-4 py-1 rounded-md font-medium hover:bg-primary-blue/90 transition-colors text-sm"
              >
                Download
              </button>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Online Resources -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Online Resources</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {resources.onlineResources.map(resource => (
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-xl font-bold mb-2">{resource.title}</h3>
            <p class="text-gray-700 mb-4">{resource.description}</p>
            <a
              href={resource.url}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-primary-blue text-white px-4 py-1 rounded-md font-medium hover:bg-primary-blue/90 transition-colors text-sm inline-flex items-center"
            >
              Visit Website
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
        ))}
      </div>
    </section>

    <!-- Additional Information -->
    <div class="bg-mountain-gray/10 rounded-lg p-8">
      <h2 class="text-2xl font-bold mb-4">Need More Resources?</h2>
      <p class="mb-6">
        These materials are regularly updated. If you need additional resources or have specific
        learning requirements, please don't hesitate to contact our teaching staff.
      </p>
      <div class="flex flex-wrap gap-4">
        <a
          href="/contact"
          class="bg-primary-blue text-white px-6 py-2 rounded-md font-medium hover:bg-primary-blue/90 transition-colors inline-flex items-center"
        >
          Contact Us
        </a>
        <a
          href="/syllabus"
          class="bg-white text-primary-blue border-2 border-primary-blue px-6 py-2 rounded-md font-medium hover:bg-primary-blue hover:text-white transition-colors inline-flex items-center"
        >
          Back to Syllabus
        </a>
      </div>
    </div>
  </div>
</SyllabusLayout>