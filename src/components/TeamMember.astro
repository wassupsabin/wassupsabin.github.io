---
import OptimizedImage from './OptimizedImage.astro';

interface Props {
  name: string;
  role: string;
  bio: string;
  imageUrl: string;
  socials?: {
    facebook?: string;
    linkedin?: string;
    email?: string;
  };
}

const { name, role, bio, imageUrl, socials = {} } = Astro.props;
---

<div class="bg-white dark:bg-dark-card rounded-lg shadow-md overflow-hidden">
  <div class="aspect-w-1 aspect-h-1">
    <OptimizedImage
      src={imageUrl}
      alt={`${name} - ${role}`}
      aspectRatio={1}
      class="w-full h-full"
      sizes="(min-width: 1280px) 384px, (min-width: 1024px) 320px, (min-width: 768px) 352px, calc(100vw - 32px)"
    />
  </div>
  <div class="p-6">
    <h3 class="text-xl font-bold mb-2 dark:text-white">{name}</h3>
    <p class="text-primary-blue dark:text-accent-gold font-medium mb-4">{role}</p>
    <p class="text-gray-700 dark:text-gray-300 mb-4">{bio}</p>
    
    {Object.keys(socials).length > 0 && (
      <div class="flex space-x-4">
        {socials.facebook && (
          <a
            href={socials.facebook}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-600 dark:text-gray-400 hover:text-primary-blue dark:hover:text-accent-gold transition-colors"
          >
            <span class="sr-only">Facebook</span>
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/>
            </svg>
          </a>
        )}
        
        {socials.linkedin && (
          <a
            href={socials.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-600 dark:text-gray-400 hover:text-primary-blue dark:hover:text-accent-gold transition-colors"
          >
            <span class="sr-only">LinkedIn</span>
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
        )}

        {socials.email && (
          <a
            href={`mailto:${socials.email}`}
            class="text-gray-600 dark:text-gray-400 hover:text-primary-blue dark:hover:text-accent-gold transition-colors"
          >
            <span class="sr-only">Email</span>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </a>
        )}
      </div>
    )}
  </div>
</div>