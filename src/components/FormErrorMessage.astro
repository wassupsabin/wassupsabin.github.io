---
interface Props {
  id: string;
  ariaLive?: 'polite' | 'assertive';
  class?: string;
}

const { 
  id, 
  ariaLive = 'polite',
  class: className = ''
} = Astro.props;
---

<div
  id={id}
  role="alert"
  aria-live={ariaLive}
  class:list={[
    'hidden p-4 rounded-md',
    'bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400',
    className
  ]}
>
  <slot />
</div>